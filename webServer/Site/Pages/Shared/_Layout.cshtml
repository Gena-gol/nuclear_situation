<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        html, body {
            width: 100%;
            height: 100%;
            padding: 0;
            margin: 0;
        }
        #map{
            width: 70%;
            height: 80%;
            margin-left: auto;
            margin-right: auto;
            margin-top: 30px;
        }
    </style>
    <!--<script src="https://api-maps.yandex.ru/2.0-stable/?apikey=09046ee7-bb64-44d5-a3b4-843a30527249&load=package.standard&lang=ru-RU" type="text/javascript"></script>-->
    <script src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript"></script>
    <script src="~/js/site.js" type="text/javascript"></script>
</head>
<body>
    <div>
        <div id="divSignIn">
            <label>Логин</label>
            <input id="inputLogin" width="100" />
            <label>Пароль</label>
            <input id="inputPass" width="100" />
            <button onclick="SignIn()">Войти</button>
        </div>
        <div id="divSigned">
            <label id="lbLogin"></label>
            <button id="btnSignOut" onclick="SignOut()">Выйти</button>
            <input type="file" id="inputFile" />
            <button id="btnLoad" onclick="LoadFile()">Загрузить</button>
        </div>
    </div>
    <div id="map"></div>
    <div class="container">
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
